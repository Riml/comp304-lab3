<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.comp304.group1.comp304_lab3.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_next_msg" />

    <Button
        android:text="@string/btn_e2_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEx2"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/btnEx1"
        android:layout_alignParentStart="true"
        android:onClick="ex2Click" />

    <Button
        android:text="@string/btn_e3_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEx3"
        android:layout_below="@+id/btnEx2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:onClick="ex3Click"/>

    <Button
        android:text="@string/btn_e1_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEx1"
        android:layout_marginTop="96dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:onClick="ex1Click" />
</RelativeLayout>
