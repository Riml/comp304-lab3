<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_excercise3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.comp304.group1.comp304_lab3.Exercise3">

    <ImageView
        android:layout_height="150dp"
        android:id="@+id/earth"
        app:srcCompat="@drawable/earth"
        android:contentDescription="@string/earthImg"
        android:scaleType="fitCenter"
        android:layout_width="wrap_content"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/moon"
        app:srcCompat="@drawable/moon"
        android:contentDescription="@string/moonImg"
        android:layout_marginBottom="20dp"
        android:layout_alignBottom="@+id/earth"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
